# Example environment variables for NetGPT backend
# Copy this file to .env and fill with real values in production. Do NOT commit secrets.

# Database connection string (Postgres)
ConnectionStrings__DefaultConnection=Host=localhost;Database=netgpt;Username=postgres;Password=postgres

# JWT settings
Jwt__Secret=change_this_to_a_strong_random_secret
Jwt__Issuer=netgpt
Jwt__Audience=netgpt_clients
# Optional: RSA private key PEM for asymmetric signing (multiline values may need to be loaded differently in your host)
Jwt__RSAPrivatePem=

# OpenAI / AI provider settings
OpenAI__ApiKey=
OpenAI__ApiBase=
OpenAI__DefaultModel=gpt-4o

# ASPNETCORE environment
ASPNETCORE_ENVIRONMENT=Production
# Environment placeholders for NetGPT backend JWT configuration
# Replace the placeholder values before running in production.
# Use a secure long random value for JWT_SECRET or configure an RSA signing certificate and set JWT_USE_ASYMMETRIC=true

# Symmetric secret (keep secret!). Recommended length: 32+ bytes base64.
JWT_USE_ASYMMETRIC=false
JWT_SECRET=ReplaceWithSecureRandomBase64OrSetToEmptyIfUsingAsymmetric

# If using asymmetric keys (recommended for production), provide paths to PEM/PKCS12 files and a passphrase if needed
# JWT_PRIVATE_KEY_PATH=/path/to/private.key
# JWT_PUBLIC_KEY_PATH=/path/to/public.key
# JWT_PRIVATE_KEY_PASSPHRASE=

JWT_ISSUER=netgpt
JWT_AUDIENCE=netgpt-api
ACCESS_TOKEN_EXPIRES_MINUTES=15
REFRESH_TOKEN_EXPIRES_DAYS=30

# Cookie settings for refresh token
REFRESH_TOKEN_COOKIE_NAME=netgpt_refresh
REFRESH_TOKEN_COOKIE_SECURE=true
REFRESH_TOKEN_COOKIE_HTTPONLY=true

# SignalR
SIGNALR_HUB_PATH=/hubs/conversation

# Database connection (if using a single env var instead of appsettings)
# DefaultConnection=Host=localhost;Database=netgpt;Username=postgres;Password=postgres
