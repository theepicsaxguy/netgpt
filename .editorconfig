root = true

[*.cs]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
dotnet_sort_system_directives_first = true

# Treat analyzer diagnostics according to severity below
dotnet_analyzer_diagnostic.severity = warning

# StyleCop: one type per file (DTO rule)
dotnet_diagnostic.SA1402.severity = error

# StyleCop: file header must be present (DISABLE THIS)
dotnet_diagnostic.SA1633.severity = none

# IDE: file header is missing or incorrect (KEEP THIS ENABLED)
# IDE: file header is missing or incorrect (KEEP THIS ENABLED)
dotnet_diagnostic.IDE0073.severity = error

# File header template for C# files
file_header_template = Copyright (c) 2025 NetGPT. All rights reserved.

# Encourage file-scoped namespaces (SA1500)
# This is often better handled by Roslyn's IDE0055/IDE0065
dotnet_diagnostic.SA1500.severity = none # DISABLE THIS FOR NOW TO PREVENT CONFLICTS

# Enforce XML docs on public members (SA1600)
dotnet_diagnostic.SA1600.severity = none # DISABLE THIS FOR NOW TO PREVENT CONFLICTS

# Prefer readonly or init-only where applicable
dotnet_diagnostic.CA2104.severity = warning

# Use latest analysis level when building
dotnet_code_quality.analysis_level = latest

# Limit line length for readability (soft reminder)
max_line_length = 120

# SA1200: Using directives should be placed correctly
dotnet_diagnostic.SA1200.severity = none

# SA1101: Prefix local calls with this
dotnet_diagnostic.SA1101.severity = none
