root = true

[*.cs]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
dotnet_sort_system_directives_first = true

# Treat analyzer diagnostics according to severity below
dotnet_analyzer_diagnostic.severity = warning

# StyleCop: one type per file (DTO rule)
dotnet_diagnostic.SA1402.severity = error

# StyleCop: file header must be present
dotnet_diagnostic.SA1633.severity = warning

# File header template for C# files
file_header_template = \
// <copyright file="{fileName}" company="NetGPT">\
// Copyright (c) NetGPT. All rights reserved.\
// Repo owner: theepicsaxguy\
// </copyright>

# Encourage file-scoped namespaces (cleaner files)
dotnet_diagnostic.SA1500.severity = warning

# Enforce XML docs on public members to help SRP/DDD documentation
dotnet_diagnostic.SA1600.severity = warning

# Prefer readonly or init-only where applicable
dotnet_diagnostic.CA2104.severity = warning

# Use latest analysis level when building
dotnet_code_quality.analysis_level = latest

# Limit line length for readability (soft reminder)
max_line_length = 120
